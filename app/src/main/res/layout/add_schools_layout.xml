<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/school_add"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:gravity="right|center_vertical"
    android:layout_marginBottom="@dimen/list_margin_bottom">

    <TextView
        android:id="@+id/school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/add_school_name_size"
        android:textColor="#000000"
        android:paddingRight="15dp">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/add_school_store_text"
        android:textSize="@dimen/add_button_text_size"
        android:layout_marginRight="12dp"
        android:id="@+id/add_button"
        android:background="@color/colorClickable" />

</LinearLayout>