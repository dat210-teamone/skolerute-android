<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_marginBottom="5dp"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/school_name_height"
        android:id="@+id/school_name_container"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/list_margin_bottom">


        <CheckBox
            android:text="@string/check_box"
            android:buttonTint="#000000"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/visibility_check"
            android:padding="5dp"
            android:layout_margin="0dp"
            tools:targetApi="lollipop" />
        <!-- android:layout_weight="1" -->



        <TextView
            android:id="@+id/school_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="@dimen/stored_schools_size"
            android:textColor="@color/colorDarkText"/>
        <!-- android:layout_weight="1" -->

        <ImageView
            android:id="@+id/notification_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/alarm_off"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:contentDescription="@string/notification_off"
            />

        <ImageView
            android:id="@+id/stored_schools_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:layout_marginRight="1dp"
            android:layout_marginEnd="1dp"
            android:contentDescription="@string/stored_school_menu"
             />

    </LinearLayout>

