<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:context="com.github.dat210_teamone.skolerute.Fragments.AddSchools"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:id="@+id/searchView"
        android:focusable="false"
        android:queryHint="@string/search_hint_text">
    </SearchView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/colorTitle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:text="@string/add_schools_nearby_title"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/colorBrightText" />
    </LinearLayout>

    <ListView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/schoolsList"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/finished_container"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_height="@dimen/button_bar_height"
        android:background="@color/colorClickable"
        android:tag="active">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finished"
            android:text="Ferdig"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>